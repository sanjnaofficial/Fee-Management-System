<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F7C04A"
    tools:context=".Models.Home4">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fees Management System"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#153462"
        android:textSize="24sp"
        android:paddingBottom="16dp" />

    <!-- Student Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/background_student_details">
        <!-- Profile Picture -->


        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/profile_picture"
            android:contentDescription="Profile Picture"/>

        <!-- Student Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

        </LinearLayout>
    </LinearLayout>

    <!-- Payment Button -->
<!--    <Button-->
<!--        android:id="@+id/payment_button"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Pay Fees"-->
<!--        android:backgroundTint="#3F497F"-->
<!--        android:textSize="18sp"-->
<!--        android:textStyle="bold"-->
<!--        android:textColor="@color/white"/>-->


    <EditText
        android:id="@+id/student_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Student Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/fees_amount_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Fees Amount"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/add_fees_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F497F"
        android:text="Add Fees" />


    <ImageView
        android:id="@+id/qr_code_imageview"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:contentDescription="QR Code"/>

    <ListView
        android:id="@+id/fees_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />




</LinearLayout>


